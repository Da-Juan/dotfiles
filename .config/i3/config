# Focused window screenshot
bindsym $mod+Shift+w exec scrot '/tmp/screencap_%Y%m%d-%H%M%S_$wx$h.png' -u -e 'xclip -selection clipboard -target image/png -i $f'
# Selection screenshot
bindsym --release $mod+Shift+s exec scrot '/tmp/screencap_%Y%m%d-%H%M%S_$wx$h.png' -s -e 'xclip -selection clipboard -target image/png -i $f'
